<body>
    @*<div id="divSuccessMessage" role="alert">
            alert(@ViewBag.successMessage)
        </div>*@

    <div id="container">
        <div id="head">
            <div id="menu_header">
                <span id="head_left" class="yellow">Welcome! @ViewBag.User.userName.</span>
                <span id="head_right" class="yellow">Your balance is @ViewBag.User.balance!</span>
            </div>
        </div>
        <br />
        <br />
        <div id="content">
            <div class="login_box">
                <ul id="nav_list">
                    <li class="li_nav_body">
                        <form method="post" asp-action="getAllItems" asp-controller="Client">
                            <input class="sidebar" type="hidden" name="userID" value=@ViewBag.User.userID>
                            <input class="sidebar" type="submit" name="backHomepageBtn" value="Keep Shopping" />
                        </form>
                    </li>
                    <li class="li_nav_body">
                        <form asp-action="LoginPage" asp-controller="Client" method="get">
                            <input class="sidebar" type="submit" name="LogoutBtn" value="Log out" />
                        </form>
                    </li>
                    <li class="li_nav_body">
                        <form asp-controller="Client" asp-action="Crash" method="get">
                            <input class="sidebar" type="submit" name="CrashBtn" value="Crash" />
                        </form>
                    </li>
                </ul>
            </div>

            <div class="content_box_photo">

                <div>
                    <form method="post" asp-controller="client" asp-action="ViewUserInfoAsync">
                        <input type="hidden" name="user" value=@ViewBag.User />
                        <input type="submit" name="ViewUserInfo" value="View Personal Infomation" style="font-size:13px"/>
                    </form>
                    <br />
                    <form method="post" asp-action="GetMyCartAsync" asp-controller="Client">
                        <input type="hidden" name="userID" value=@ViewBag.User.userID />
                        <input type="submit" name="ViewCartBtn" value="View My Cart" style="font-size:13px" />
                    </form>
                    <br />
                    <form method="post" asp-action="OrderHistoryAsync" asp-controller="Client">
                        <input type="hidden" name="userID" value=@ViewBag.User.userID />
                        <input type="submit" name="ViewOrderHistoryBtn" value="View Order History" style="font-size:13px" />
                    </form>
                    <br />
                    <br />
                    <br />
                </div>

                <div class="content">
                    @foreach (Item item in Model)
                    {
                    <form asp-controller="Client" asp-action="AddToCartAsync" method="post">
                        <ul class="hoverbox">
                            <div class="item">
                                <div id="item_content">
                                    <table id="cartitem">
                                        <tr id="tablerow">
                                            <th colspan="2">
                                                <input type="hidden" name="picLink" value=@item.picLink />                                                 <img src="@item.picLink" />
                                            </th>
                                        </tr>
                                        <tr id="tablerow">
                                            <td>
                                                <p class="yellow">ID:</p>
                                            </td>
                                            <td>
                                                <input type="text" name="itemID" value=@item.itemID readonly="readonly" />
                                            </td>
                                        </tr>
                                        <tr id="tablerow">
                                            <td>
                                                <p class="yellow">Name:</p>
                                            </td>
                                            <td>
                                                <input type="text" name="itemName" value="@item.itemName" readonly="readonly" />
                                            </td>
                                        </tr>
                                        <tr id="tablerow">
                                            <td>
                                                <p>Size:</p>
                                            </td>
                                            <td>
                                                <input type="text" name="itemSize" value=@item.itemSize readonly="readonly" />
                                            </td>
                                        </tr>
                                        <tr id="tablerow">
                                            <td>
                                                <p>Amount:</p>
                                            </td>
                                            <td><input type="text" name="itemAmount" value=@item.itemAmount readonly="readonly" /></td>
                                        </tr>
                                        <tr id="tablerow">
                                            <td>
                                                <p>Price:</p>
                                            </td>
                                            <td>
                                                <input type="text" name="price" value=@item.price readonly="readonly" />
                                            </td>
                                        </tr>
                                        <tr id="tablerow">
                                            <td>
                                                <p>Description:</p>
                                            </td>
                                            <td>
                                                <input type="text" name="description" value=@item.description readonly="readonly" />
                                            </td>
                                        </tr>
                                        <tr id="tablerow">
                                            <td>
                                                <p><i class="fas fa-plus-circle"></i></p>
                                            </td>
                                            <td colspan="2" class="addbtn">
                                                <input type="hidden" name="userID" value=@ViewBag.User.userID />
                                                <input type="submit" name="addItemToCart" value="Add To Cart" class="addbtn" />
                                                <br />
                                                <br />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </ul>
                    </form>
                    }
                </div>   
            </div>
        </div>
    </div>

</body>

